<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane prefHeight="864.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.gestaonotavel.ifsul.controller.TelaCadastroPacienteController">

    <stylesheets>
        <URL value="@/styles/telacadastropaciente.css"/>
    </stylesheets>

    <!-- TOPO - Header Azul -->
    <top>
        <VBox prefHeight="80.0" prefWidth="1000.0" style="-fx-background-color: #1976D2; -fx-padding: 20;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;"
                       text="Cadastro de Pacientes"/>
                <Label style="-fx-text-fill: #E3F2FD; -fx-font-size: 12;" text="Preencha as informações do paciente"/>
            </children>
        </VBox>
    </top>

    <!-- CENTRO - Conteúdo Principal -->
    <center>
        <HBox prefHeight="720.0" prefWidth="1000.0" spacing="0.0">
            <children>

                <!-- MENU LATERAL ESQUERDO -->
                <VBox prefHeight="752.0" prefWidth="91.0" spacing="10.0"
                      style="-fx-background-color: #ECEFF1; -fx-padding: 15; -fx-border-color: #BDBDBD; -fx-border-width: 0 1 0 0;">
                    <children>
                        <Button minHeight="60.0" minWidth="60.0" style="-fx-font-size: 24;" text="☰"/>
                        <Button minHeight="60.0" minWidth="60.0" style="-fx-font-size: 20; -fx-text-fill: #1976D2;"
                                text="👤"/>
                        <Button minHeight="60.0" minWidth="60.0" style="-fx-font-size: 20;" text="👤📅"/>
                        <Button minHeight="60.0" minWidth="60.0" style="-fx-font-size: 20;" text="👤📅💰"/>
                        <Button minHeight="60.0" minWidth="60.0" style="-fx-font-size: 20;" text="👤📅💰📋"/>
                    </children>
                </VBox>

                <!-- CONTEÚDO PRINCIPAL -->
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="720.0" prefWidth="920.0"
                            vbarPolicy="AS_NEEDED">
                    <content>
                        <VBox prefHeight="750.0" prefWidth="900.0" spacing="20.0"
                              style="-fx-padding: 30; -fx-background-color: #FFFFFF;">
                            <children>

                                <!-- SEÇÃO: DADOS PESSOAIS -->
                                <VBox prefHeight="280.0" prefWidth="840.0" spacing="20.0">
                                    <children>
                                        <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #212121;"
                                               text="Dados Pessoais"/>

                                        <!-- Container com foto (lado direito) e campos (lado esquerdo) -->
                                        <HBox prefHeight="250.0" prefWidth="840.0" spacing="30.0">
                                            <children>

                                                <!-- Lado Esquerdo - Campos -->
                                                <VBox prefHeight="250.0" prefWidth="520.0" spacing="20.0">
                                                    <children>

                                                        <!-- Nome Completo -->
                                                        <VBox prefHeight="65.0" prefWidth="520.0" spacing="8.0">
                                                            <children>
                                                                <Label style="-fx-font-weight: bold; -fx-text-fill: #212121;"
                                                                       text="Nome Completo*"/>
                                                                <TextField fx:id="txtNome" prefHeight="45.0"
                                                                           prefWidth="520.0"
                                                                           promptText="Digite o nome completo do paciente"
                                                                           style="-fx-font-size: 12; -fx-padding: 10;"/>
                                                            </children>
                                                        </VBox>

                                                        <!-- Data de Nascimento -->
                                                        <VBox prefHeight="65.0" prefWidth="520.0" spacing="8.0">
                                                            <children>
                                                                <Label style="-fx-font-weight: bold; -fx-text-fill: #212121;"
                                                                       text="Data de Nascimento*"/>
                                                                <DatePicker fx:id="datePickerDataNascimento"
                                                                            prefHeight="45.0" prefWidth="520.0"
                                                                            style="-fx-font-size: 12; -fx-padding: 10;"/>
                                                            </children>
                                                        </VBox>

                                                        <!-- CPF -->
                                                        <VBox prefHeight="65.0" prefWidth="520.0" spacing="8.0">
                                                            <children>
                                                                <Label style="-fx-font-weight: bold; -fx-text-fill: #212121;"
                                                                       text="CPF*"/>
                                                                <TextField fx:id="txtCpf" prefHeight="45.0"
                                                                           prefWidth="520.0" promptText="000.000.000-00"
                                                                           style="-fx-font-size: 12; -fx-padding: 10;"/>
                                                            </children>
                                                        </VBox>
                                                    </children>

                                                </VBox>

                                                <!-- Lado Direito - Foto (Placeholder) -->
                                                <VBox prefHeight="250.0" prefWidth="220.0" spacing="8.0">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #212121;"
                                                               text="Foto do Paciente"/>
                                                        <AnchorPane prefHeight="200.0" prefWidth="220.0"
                                                                    style="-fx-border-color: #BDBDBD; -fx-border-width: 2; -fx-border-style: dashed; -fx-background-color: #FAFAFA;">
                                                            <children>
                                                                <Label alignment="CENTER" layoutX="10.0" layoutY="85.0"
                                                                       prefHeight="30.0" prefWidth="200.0"
                                                                       style="-fx-text-fill: #757575; -fx-font-size: 11;"
                                                                       text="Foto (em breve)"/>
                                                            </children>
                                                        </AnchorPane>
                                                    </children>
                                                </VBox>
                                            </children>

                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Separador -->
                                <Separator prefWidth="840.0" style="-fx-border-color: #E0E0E0;"/>

                                <!-- SEÇÃO: INFORMAÇÕES CLÍNICAS -->
                                <VBox prefHeight="280.0" prefWidth="840.0" spacing="20.0">
                                    <children>
                                        <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #212121;"
                                               text="Informações Clínicas"/>

                                        <!-- Diagnóstico -->
                                        <VBox prefHeight="65.0" prefWidth="840.0" spacing="8.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: #212121;"
                                                       text="Diagnóstico*"/>
                                                <TextField fx:id="txtDiagnostico" prefHeight="45.0" prefWidth="840.0"
                                                           promptText="Digite o diagnóstico"
                                                           style="-fx-font-size: 12; -fx-padding: 10;"/>
                                            </children>
                                        </VBox>

                                        <!-- Escolaridade -->
                                        <VBox prefHeight="65.0" prefWidth="840.0" spacing="8.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: #212121;"
                                                       text="Escolaridade*"/>
                                                <ComboBox fx:id="cbxEscolaridade" prefHeight="45.0" prefWidth="840.0"
                                                          style="-fx-font-size: 12; -fx-padding: 8;"/>
                                            </children>
                                        </VBox>

                                        <!-- Condição Clínica -->
                                        <VBox prefHeight="120.0" prefWidth="840.0" spacing="8.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: #212121;"
                                                       text="Condição Clínica*"/>
                                                <TextArea fx:id="txtCondicaoClinica" prefHeight="100.0"
                                                          prefWidth="840.0"
                                                          style="-fx-font-size: 12; -fx-padding: 10; -fx-control-inner-background: #FAFAFA;"
                                                          wrapText="true"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>

                                <!-- Separador -->
                                <Separator prefWidth="840.0" style="-fx-border-color: #E0E0E0;"/>

                                <!-- BOTÕES DE AÇÃO -->
                                <HBox prefHeight="50.0" prefWidth="840.0" spacing="15.0"
                                      style="-fx-alignment: CENTER_RIGHT;">
                                    <children>
                                        <Button fx:id="btnLimpar" minWidth="120.0" onAction="#handleLimparButtonAction"
                                                prefHeight="40.0" style="-fx-font-size: 12; -fx-padding: 10;"
                                                text="Limpar"/>
                                        <Button fx:id="btnCancelar" minWidth="120.0"
                                                onAction="#handleCancelarButtonAction" prefHeight="40.0"
                                                style="-fx-font-size: 12; -fx-padding: 10;" text="Cancelar"/>
                                        <Button fx:id="btnSalvar" minWidth="120.0" onAction="#handleSalvarButtonAction"
                                                prefHeight="40.0"
                                                style="-fx-font-weight: bold; -fx-font-size: 12; -fx-padding: 10; -fx-background-color: #1976D2; -fx-text-fill: white;"
                                                text="Salvar"/>
                                        <Button fx:id="btnAssociar" minWidth="120.0"
                                                onAction="#handleAssociarButtonAction" prefHeight="40.0"
                                                style="-fx-font-size: 12; -fx-padding: 10;"
                                                text="Associar Responsável"/>
                                    </children>
                                </HBox>
                            </children>

                        </VBox>
                    </content>
                </ScrollPane>
            </children>

        </HBox>
    </center>

</BorderPane>
