<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.gestaonotavel.ifsul.controller.TelaPrincipalController">

    <!-- TOPO - Header com título e ações rápidas -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 20;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" text="Gestão Notável" />
                                <Label style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 13;" text="Painel de Gerenciamento de Pacientes" />
                            </children>
                        </VBox>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <children>
                                <Button style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 12; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;" text="📊 Relatórios" />
                                <Button style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 12; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;" text="⚙️ Configurações" />
                                <Button style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 12; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;" text="📊📊📊📊👤 Perfil" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </HBox>

                <!-- Barra de busca e filtros -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 10 20 0 20;">
                    <children>
                        <TextField fx:id="txtBuscar" prefHeight="40.0" prefWidth="400.0" promptText="                Buscar paciente por nome, CPF ou diagnóstico..." style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 13;" />

                        <ComboBox fx:id="cbxFiltroStatus" prefHeight="40.0" prefWidth="150.0" promptText="Status" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 6; -fx-font-size: 13;" />

                        <ComboBox fx:id="cbxFiltroResponsavel" prefHeight="40.0" prefWidth="180.0" promptText="Responsável" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 6; -fx-font-size: 13;" />

                        <Button fx:id="btnLimparFiltros" onAction="#handleLimparFiltros" prefHeight="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 12; -fx-padding: 10 15; -fx-cursor: hand;" text="Limpar Filtros" />

                        <Region HBox.hgrow="ALWAYS" />

                        <Button fx:id="btnNovoPaciente" onAction="#handleNovoCadastroButtonAction" prefHeight="40.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13; -fx-background-radius: 6; -fx-padding: 10 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 2);" text="➕ Nova Criança" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- CENTRO - Conteúdo Principal -->
    <center>
        <VBox spacing="0.0" style="-fx-background-color: #f5f7fa;">
            <children>

                <!-- Cards de Estatísticas -->
                <HBox spacing="20.0" style="-fx-padding: 25 25 15 25;">
                    <children>
                        <!-- Card: Total de Pacientes -->
                        <VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-text-fill: #666; -fx-font-size: 12;" text="Total de Pacientes" />
                                <Label fx:id="lblTotalPacientes" style="-fx-text-fill: #333; -fx-font-size: 32; -fx-font-weight: bold;" text="0" />
                                <Label style="-fx-text-fill: #999; -fx-font-size: 11;" text="Ativos no sistema" />
                            </children>
                        </VBox>

                        <!-- Card: Atendimentos Hoje -->
                        <VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-text-fill: #666; -fx-font-size: 12;" text="Atendimentos Hoje" />
                                <Label fx:id="lblAtendimentosHoje" style="-fx-text-fill: #4CAF50; -fx-font-size: 32; -fx-font-weight: bold;" text="0" />
                                <Label style="-fx-text-fill: #999; -fx-font-size: 11;" text="Agendados" />
                            </children>
                        </VBox>

                        <!-- Card: Pendentes -->
                        <VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-text-fill: #666; -fx-font-size: 12;" text="Pendentes" />
                                <Label fx:id="lblPendentes" style="-fx-text-fill: #FF9800; -fx-font-size: 32; -fx-font-weight: bold;" text="0" />
                                <Label style="-fx-text-fill: #999; -fx-font-size: 11;" text="Aguardando ação" />
                            </children>
                        </VBox>

                        <!-- Card: Sem Responsável -->
                        <VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                            <children>
                                <Label style="-fx-text-fill: #666; -fx-font-size: 12;" text="Sem Responsável" />
                                <Label fx:id="lblSemResponsavel" style="-fx-text-fill: #F44336; -fx-font-size: 32; -fx-font-weight: bold;" text="0" />
                                <Label style="-fx-text-fill: #999; -fx-font-size: 11;" text="Requer atenção" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Tabela de Pacientes -->
                <VBox spacing="15.0" style="-fx-padding: 10 25 25 25;" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;" text="Lista de Pacientes" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblTotalRegistros" style="-fx-text-fill: #666; -fx-font-size: 12;" text="0 registros encontrados" />
                            </children>
                        </HBox>

                        <TableView fx:id="pacientesTableView" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colunaNome" prefWidth="180.0" style="-fx-alignment: CENTER_LEFT;" text="Nome Completo" />
                                <TableColumn fx:id="colunaIdade" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Idade" />
                                <TableColumn fx:id="colunaDiagnostico" prefWidth="200.0" style="-fx-alignment: CENTER_LEFT;" text="Diagnóstico" />
                                <TableColumn fx:id="colunaResponsavel" prefWidth="180.0" style="-fx-alignment: CENTER_LEFT;" text="Responsável" />
                                <TableColumn fx:id="colunaSessao" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Próxima Sessão" />
                                <TableColumn fx:id="colunaStatus" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Status" />
                                <TableColumn fx:id="colunaAcoes" prefWidth="200.0" style="-fx-alignment: CENTER;" text="Ações" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

    <!-- RODAPÉ -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #37474F; -fx-padding: 15;">
            <children>
                <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 11;" text="© 2025 Gestão Notável - Sistema de Gerenciamento de Terapias Infantis" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
